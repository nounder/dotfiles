#!/bin/sh

echo -n "Do you want to proceed with installation? (y/N) "
read answer

if [ "$answer" != "y" ] && [ "$answer" != "Y" ]; then
    echo "Installation cancelled."
    exit 0
fi

sudo apt update

sudo apt update

sudo apt install -y \
  git \
  neovim \
  fish \
  tmux \
  ripgrep \
  direnv \
  atool


tmp_dir=$(mktemp -d)
cd $tmp_dir
wget https://github.com/junegunn/fzf/releases/download/v0.57.0/fzf-0.57.0-linux_amd64.tar.gz
atool -x fzf-0.57.0-linux_amd64.tar.gz
mkdir -p ~/.local/bin/
sudo mv fzf ~/.local/bin/
cd - && rm -r $tmp_dir

echo -n "Install node? "
read answer

if [ "$answer" = "y" ] || [ "$answer" = "Y" ]; then
  sudo apt install -y \
    nodejs \
    npm
fi

echo -n "Install deno? "
read answer

if [ "$answer" = "y" ] || [ "$answer" = "Y" ]; then
  curl -fsSL https://deno.land/install.sh | sh
fi

echo -n "Install podman? "
read answer

if [ "$answer" = "y" ] || [ "$answer" = "Y" ]; then
  sudo apt install -y podman
fi

echo -n "Install httpie? "
read answer

if [ "$answer" = "y" ] || [ "$answer" = "Y" ]; then
  sudo apt install -y httpie
fi

echo "All done!"

